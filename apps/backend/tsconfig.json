{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "Node",
    "outDir": "dist",
    "rootDir": "src",
    "strict": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "noEmitOnError": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "src/cron/liveScoresCron.ts",
    "src/cron/mlCron.ts",
    "src/routes/bettingInsights.ts",
    "src/routes/notifications.ts",
    "src/services/betBuilderOfTheDayService.ts",
    "src/services/betBuilderService.ts",
    "src/services/fetchAndNormalizeOdds.ts",
    "src/services/liveScoresService.ts",
    "src/services/mlIntegrationService.ts",
    "src/services/notificationService.ts",
    "src/services/trebleService.ts"
  ]
}
