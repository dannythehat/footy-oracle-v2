{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "node",
    "lib": ["ES2022"],
    "rootDir": "./src",
    "outDir": "./dist",
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "src/server.ts",
    "src/app.ts",
    "src/config/**/*.ts",
    "src/models/**/*.ts",
    "src/routes/**/*.ts",
    "src/services/**/*.ts",
    "src/cron/**/*.ts",
    "src/types/**/*.ts"
  ],
  "exclude": [
    "src/legacy/**/*"
  ]
}
